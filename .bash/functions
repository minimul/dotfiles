function ts {
  args=$@
  tmux send-keys -t right "$args" C-m
}

# nts : "Note to self"
function nts {
  args=$@
  ~/scripts/note_to_self.rb "$args"
}

function gdl {
  if [ -z "$1" ]
  then
    back_commits=1
  else
    back_commits=$1
  fi
  if [ -z "$2" ]
  then
    new=
  else
    new=--diff-filter=A 
  fi
  cmd="git diff --name-only $new HEAD~$back_commits..HEAD"
  echo $cmd
  eval $cmd 
}

function hcti {
  if [ -z "$1" ]
  then
    suffix=
  else
    suffix=-prod
  fi
  cmd="heroku run \"bash -i -c 'echo set editing-mode vi > ~/.inputrc'; rails c\" --app=touritinerary$suffix"
  echo $cmd
  eval $cmd
}

