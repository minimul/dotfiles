alias dkexec="dkc exec"
alias dkcreds="dkexec -e EDITOR=vim rails rails credentials:edit -e"
alias elinks="docker run -it --rm linuxdojo/elinks-spidermonkey elinks"
alias dkbundleopen="dkvimrc;dkexec -e EDITOR=vim rails bundle open"
